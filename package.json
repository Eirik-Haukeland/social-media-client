{
  "name": "css-frameworks-ca",
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "prepare": "husky install",
    "test": "npm run test-unit && npm run test-e2e",
    "test-unit": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test-e2e": "cypress run",
    "lint-check": "eslint ./src/js/* && prettier -c ./src/*",
    "lint-fix": "eslint --fix ./src/js/* && prettier --write ./src/*"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "cypress": "^12.17.4",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-cypress": "^2.14.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.2",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{scss,md,html}": "prettier --write"
  },
  "eslintConfig": {
    "extends": "airbnb"
  }
}
